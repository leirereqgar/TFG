<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.GuitAR.background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_lessons_screen_scene"
    tools:context=".LessonSelectionScreen">

        <Button
            android:id="@+id/b5"
            style="@style/Widget.GuitAR.Button"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/b4"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b4"
            style="@style/Widget.GuitAR.Button"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/b3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b3"
            style="@style/Widget.GuitAR.Button"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/b2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b2"
            style="@style/Widget.GuitAR.Button"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/b1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b1"
            style="@style/Widget.GuitAR.Button"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.helper.widget.Carousel
            android:id="@+id/carousel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:carousel_backwardTransition="@+id/backward"
            app:carousel_firstView="@id/b2"
            app:carousel_forwardTransition="@+id/forward"
            app:carousel_nextState="@+id/next"
            app:carousel_previousState="@+id/previous"
            app:constraint_referenced_ids="b1, b2, b3, b4, b5" />

</androidx.constraintlayout.motion.widget.MotionLayout>