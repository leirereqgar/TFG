<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/forward"
        motion:constraintSetEnd="@+id/next"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <Transition
        android:id="@+id/backward"
        motion:constraintSetEnd="@+id/previous"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/previous">
        <Constraint android:id="@+id/b1">
            <Layout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform android:translationX="210dp" />
        </Constraint>

        <Constraint android:id="@+id/b2">
            <Layout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toEndOf="@id/b1"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform android:translationX="210dp" />
        </Constraint>

        <Constraint android:id="@+id/b3">
            <Layout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toEndOf="@id/b2"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform android:translationX="210dp" />
        </Constraint>

        <Constraint android:id="@+id/b4">
            <Layout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toEndOf="@id/b3"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform android:translationX="210dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/next">
        <Constraint android:id="@+id/b1"
            android:visibility="invisible">
            <Layout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform android:translationX="-210dp" />
        </Constraint>

        <Constraint android:id="@+id/b2">
            <Layout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toEndOf="@id/b1"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform android:translationX="-210dp" />
        </Constraint>

        <Constraint android:id="@+id/b3">
            <Layout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toEndOf="@id/b2"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform android:translationX="-210dp" />
        </Constraint>

        <Constraint android:id="@+id/b4">
            <Layout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toEndOf="@id/b3"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform android:translationX="-210dp" />
        </Constraint>

        <Constraint android:id="@+id/b5"
            android:visibility="visible">
            <Layout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                motion:layout_constraintStart_toEndOf="@id/b4"
                motion:layout_constraintTop_toTopOf="parent" />
            <Transform android:translationX="-210dp" />
        </Constraint>
    </ConstraintSet>
</MotionScene>