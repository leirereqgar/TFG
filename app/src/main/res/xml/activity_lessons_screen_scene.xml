<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/next"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        android:id="@+id/forward">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/previous"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        android:id="@+id/backward">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/next">
        <Constraint android:id="@+id/c1">
            <Transform android:translationX="-200dp"/>
            <PropertySet android:alpha="0.2"/>
        </Constraint>
        <Constraint android:id="@+id/c2">
            <Transform android:translationX="-200dp"/>
        </Constraint>
        <Constraint android:id="@+id/c3">
            <Transform android:translationX="-200dp"/>
        </Constraint>
        <Constraint android:id="@+id/c4">
            <Transform android:translationX="-200dp"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/previous">
        <Constraint android:id="@+id/c1">
            <Transform android:translationX="200dp"/>
        </Constraint>
        <Constraint android:id="@+id/c2">
            <Transform android:translationX="200dp"/>
        </Constraint>
        <Constraint android:id="@+id/c3">
            <Transform android:translationX="200dp"/>
            <PropertySet android:alpha="0.5"/>
        </Constraint>
        <Constraint android:id="@+id/c4">
            <Transform android:translationX="200dp"/>
            <PropertySet android:alpha="0"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>